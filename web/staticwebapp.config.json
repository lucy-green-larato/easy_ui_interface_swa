{
  "routes": [
    { "route": "/", "rewrite": "/index.html" },

    { "route": "/reports", "rewrite": "/reports.html" },
    { "route": "/reports/*", "rewrite": "/reports.html" },

    { "route": "/script", "rewrite": "/first-call-script-v2.html" },
    { "route": "/first-call-script-v2", "rewrite": "/first-call-script-v2.html" },
    { "route": "/first-call-script-v2/*", "rewrite": "/first-call-script-v2.html" },

    { "route": "/api/*", "allowedRoles": ["anonymous"] },

    {
      "route": "/content/call-library/*",
      "allowedRoles": ["anonymous", "authenticated"],
      "headers": { "cache-control": "no-store" }
    },
    { "route": "/src/*", "allowedRoles": ["anonymous", "authenticated"] },

    { "route": "/*.html", "headers": { "cache-control": "no-cache" } },
    { "route": "/*.css",  "headers": { "cache-control": "public, max-age=31536000, immutable" } },
    { "route": "/*.js",   "headers": { "cache-control": "public, max-age=31536000, immutable" } },
    { "route": "/*.mjs",  "headers": { "cache-control": "public, max-age=31536000, immutable" } },
    { "route": "/assets/*", "headers": { "cache-control": "public, max-age=31536000, immutable" } }
  ],

  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/content/*",
      "/src/*",
      "/reports",
      "/reports/*",
      "/*.css",
      "/*.js",
      "/*.mjs",
      "/*.json",
      "/*.png",
      "/*.jpg",
      "/*.gif",
      "/*.svg",
      "/*.ico"
    ]
  },

  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; script-src 'self' https://cdn.powerbi.com 'unsafe-inline'; frame-src https://app.powerbi.com https://*.powerbi.com https://*.analysis.windows.net; connect-src 'self' https://api.powerbi.com https://*.powerbi.com https://*.analysis.windows.net https://dc.services.visualstudio.com; img-src 'self' data: blob: https://*.powerbi.com https://*.analysis.windows.net; style-src 'self' 'unsafe-inline'; font-src 'self' data: https://*.powerbi.com;",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "X-Content-Type-Options": "nosniff"
  },

  "responseOverrides": {
    "404": { "rewrite": "/index.html" }
  },

  "mimeTypes": {
    ".md":  "text/markdown; charset=utf-8",
    ".mdx": "text/markdown; charset=utf-8",
    ".js":  "application/javascript; charset=utf-8",
    ".mjs": "application/javascript; charset=utf-8",
    ".json": "application/json; charset=utf-8"
  }
}
