{
  "routes": [
    { "route": "/reports", "rewrite": "/reports.html" },
    { "route": "/reports/*", "rewrite": "/reports.html" },

    { "route": "/engagement", "rewrite": "/engagement/index.html" },
    { "route": "/engagement/*", "rewrite": "/engagement/index.html" },

    { "route": "/first-call-script-v2", "redirect": "/engagement", "statusCode": 301 },
    { "route": "/first-call-script-v2/*", "redirect": "/engagement", "statusCode": 301 },

    { "route": "/qualification", "rewrite": "/qualification/index.html" },
    { "route": "/qualification/*", "rewrite": "/qualification/index.html" },

    { "route": "/lead-qualification", "redirect": "/qualification", "statusCode": 301 },
    { "route": "/lead-qualification/*", "redirect": "/qualification", "statusCode": 301 },


    {
      "route": "/content/call-library/*",
      "allowedRoles": ["anonymous", "authenticated"],
      "headers": { "cache-control": "no-store" }
    }
  ],

  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
     "/content/*",
      "/src/*",
      "/reports",
      "/reports/*",
      "/engagement",
      "/engagement/*",
      "/qualification",
      "/qualification/*",
      "/campaign",
      "/campaign/*",
      "/first-call-script-v2",
      "/first-call-script-v2/*",
      "/lead-qualification",
      "/lead-qualification/*",
      "/*.css",
      "/*.js",
      "/*.mjs",
      "/*.json",
      "/*.png",
      "/*.jpg",
      "/*.gif",
      "/*.svg",
      "/*.ico"
    ]
  },

  "globalHeaders": {
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "X-Content-Type-Options": "nosniff"
  },

  "responseOverrides": {
    "404": { "rewrite": "/index.html" }
  },

  "mimeTypes": {
    ".md":  "text/markdown; charset=utf-8",
    ".mdx": "text/markdown; charset=utf-8",
    ".js":  "application/javascript; charset=utf-8",
    ".mjs": "application/javascript; charset=utf-8",
    ".json": "application/json; charset=utf-8"
  }
}
